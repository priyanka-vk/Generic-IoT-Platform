
<div class="container">
<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-lg btn-success btn-addon" id="myBtn3"><i class="fa fa-plus-square"></i>&nbsp;Create Project</button>

<!-- Modal -->
<div class="modal fade" id="myModal3" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <!-- Modal form for adding a new project-->
    <div class="modal-content">
      <div class="modal-header" style="padding:35px 50px;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4><span class="glyphicon glyphicon-lock"></span> Enter Project Details</h4>
      </div>
      <div class="modal-body" style="padding:40px 50px;">
        <!-- Submit the form to the '/projectsForm'-->
        <form role="form" action="/projectsForm" method="post">
          <div class="form-group">
            <label for="projectName">Project Name *</label>
            <input type="text" class="form-control" id="projectName" placeholder="Enter project Name" required name="projectName">
          </div>
          <div class="form-group">
            <label for="projectDescription">Project Description *</label>
            <input type="text" class="form-control" id="projectDescription" placeholder="Enter Description" required name="projectDescription">
          </div>
            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span>ADD project</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
      </div>
    </div>

  </div>
</div>
</div>
