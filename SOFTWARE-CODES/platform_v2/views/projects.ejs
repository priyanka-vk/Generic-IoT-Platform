<!-- Page to display the list of projecs-->
<!DOCTYPE html>
<html>

<head>
	<% include partials/header %>
		<script src="//cdn.rawgit.com/Mikhus/canvas-gauges/gh-pages/download/2.1.4/radial/gauge.min.js"></script>
		<script type="text/javascript" src="/projects_myfunction.js"></script>
		<script>
			// Script for the modal form
			$(document).ready(function() {
				$("#myBtn3").click(function() {
					$("#myModal3").modal();
				});
				$(".clickable-row").click(function() {
				});

			});
		</script>
</head>

<body>
	<% include partials/nav%>
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-2">
				</div>
				<div class="col-sm-10">

					<div >
						<% include partials/projectButton%>
						<!-- Table to display the list of projects-->
							<table class="table table-hover">
								<tr>
									<th>Sno</th>
									<th>project ID</th>
									<th>project Name</th>
									<th>project Description</th>
								</tr>
								<% i=0 %>
								<!-- Loop through the projects array and display name-->
									<% projects.forEach(function(project){ i++; %>
										<tr class='clickable-row' onclick='myfunction("<%= project.project_id %>","<%= project.project_name %>","<%= project.project_type %>","<%= project.description %>")'>
											<td>
												<%= i %>
											</td>
											<td>
												<%= project.project_id %>
											</td>
											<td>
												<%= project.project_name %>
											</td>
											<td>
												<%= project.description %>
											</td>
										</tr>

										<% }) %>
							</table>
					</div>
				</div>
			</div>
		</div>
</body>
<% include partials/footer %>

</html>
